<div class="container">
    <h1>Category Management</h1>

    <a href="/category/add" class="btn waves-effect waves-light blue">
        Add New Category
        <i class="material-icons right">add</i>
    </a>

    <table class="table responsive-table striped highlight">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each categoryList }}
            <tr>
                <td>
                    <a href="/category/detail/{{_id}}" 
                       title="Click to see all products in this category">
                        {{ name }}
                    </a>
                </td>

                <td>{{ description }}</td>
                <td>
                    <a href="/category/edit/{{_id}}"
                       class="btn-small waves-effect waves-light amber darken-2">
                       Edit
                    </a>
                    <a href="/category/delete/{{_id}}"
                       class="btn-small waves-effect waves-light red"
                       onclick="return confirm('Do you want to delete this category?')">
                       Delete
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>